	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"let tokenUrl = 'http://localhost:5262/api/Auth/Login';\r",
					"let user = pm.collectionVariables.get(\"user\");\r",
					"let pass = pm.collectionVariables.get(\"pass\");\r",
					"\r",
					"// Define el cuerpo de la solicitud como un objeto JSON\r",
					"const requestBody = {\r",
					"    User: user,\r",
					"    Password: pass\r",
					"};\r",
					"\r",
					"// Configura la solicitud de la API para obtener el token\r",
					"const getTokenRequest = {\r",
					"  method: 'POST',\r",
					"  url: tokenUrl,\r",
					"  headers: {\r",
					"      'Accept': 'application/json', // Asegúrate de que el servidor acepte JSON\r",
					"      'Content-Type': 'application/json' // Asegúrate de que se envíe como JSON\r",
					"  },\r",
					"  body: {\r",
					"    mode: 'raw', // Enviar el cuerpo como raw JSON\r",
					"    raw: JSON.stringify(requestBody) // Convertir el objeto a cadena JSON\r",
					"  }\r",
					"};\r",
					"\r",
					"// Realiza la solicitud\r",
					"pm.sendRequest(getTokenRequest, (err, response) => {\r",
					"    if (err) {\r",
					"        console.log('Error en la solicitud:', err);\r",
					"    } else {\r",
					"        if (response.status === 200) {\r",
					"            // Asegúrate de que la respuesta sea válida\r",
					"            try {\r",
					"                const jsonResponse = response.json();\r",
					"                const newAccessToken = jsonResponse.Token;\r",
					"                pm.collectionVariables.set(\"authToken\", newAccessToken);\r",
					"                console.log('Nuevo token:', newAccessToken);\r",
					"            } catch (error) {\r",
					"                console.log('Error al procesar la respuesta JSON:', error);\r",
					"            }\r",
					"        } else {\r",
					"            console.log('Error en la respuesta: ' + response.status);\r",
					"            console.log('Respuesta:', response.text()); // Para ver el cuerpo de la respuesta si no es JSON\r",
					"        }\r",
					"    }\r",
					"});\r",
					""
				]
			}
		},
